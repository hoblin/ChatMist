{
  "name": "chatmist",
  "version": "1.0.0",
  "description": "ChatMist: A desktop chat client for the Mistral API. Engage in conversations with the Mistral model, with the ability to save chats locally.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "electron-rebuild": "electron-rebuild -f -w sqlite3",
    "lint": "eslint ./src"
  },
  "build": {
    "appId": "pro.promptmaster.chatmist",
    "icon": "assets/icon.png",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoblin/ChatMist.git"
  },
  "keywords": [
    "AI",
    "chat",
    "Mistral",
    "OpenAI",
    "conversation",
    "local",
    "storage",
    "Electron",
    "desktop",
    "app"
  ],
  "author": "Yevhenii Hurin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hoblin/ChatMist/issues"
  },
  "homepage": "https://github.com/hoblin/ChatMist#readme",
  "dependencies": {
    "antd": "^5.12.2",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "re-resizable": "^6.9.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.5.4",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
